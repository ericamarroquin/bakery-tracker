@{
  Layout = "_Layout";
}
@using BakeryTracker.Models;

<h1>All Current Vendors</h1>

@if (Model.Count == 0)
{
  <h5>No vendors have been added yet!</h5>
}

@foreach (Vendor vendor in Model)
{
  <h4><a href="/vendors/@vendor.Id">@vendor.VendorName</a></h4>
}

<button>
  <a href="/">Return home</a>
</button>
<button>
  <a href="/vendors/new">Add another vendor</a>
</button>